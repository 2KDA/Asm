<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:gravity="center"
    android:background="#0017701A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_marginLeft="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/cmbook" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#629823"
            android:textSize="45dp"
            android:textStyle="bold" />

    </LinearLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_ed_username"
        android:layout_width="match_parent"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:hint="Username :"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/icon_person"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_userName"
            android:layout_width="302dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>
<!--    <EditText-->
<!--        android:id="@+id/ed_passWord"-->
<!--        android:hint="nhập PassWord"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:id="@+id/til_ed_password"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/icon_doipass"
        android:hint="Password"
        app:passwordToggleEnabled="true"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_passWord"
            android:layout_width="302dp"
            android:layout_height="60dp"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_dangnhap"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#A84CAF50"
        android:text="Đăng nhập" />

    <Button
        android:id="@+id/btn_dangky"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="#A84CAF50"
        android:text="Đăng ký" />




</LinearLayout>